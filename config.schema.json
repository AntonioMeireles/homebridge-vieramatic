{
  "pluginAlias": "PanasonicVieraTV",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Note: If your TV is a 2018 or later model please generate [here](http://${{HOSTNAME}}:8973) the required authentication tuple.<br/>",
  "footerDisplay": "Check this plugin's [homepage](https://github.com/AntonioMeireles/homebridge-vieramatic) for additional context or to report any issue you may find.",
  "schema": {
    "tvs": {
      "title": "Panasonic™ Viera™",
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "tvName": {
            "title": "TV Name",
            "description": "The name you'd like to set for the TV.",
            "type": "string",
            "required": false
          },
          "ipAddress": {
            "title": "IP address",
            "description": "The IP address of your TV.",
            "type": "string",
            "format": "ipv4",
            "required": true
          },
          "encKey": {
            "title": "Encryption Key",
            "type": "string",
            "required": false
          },
          "appId": {
            "title": "AppId",
            "type": "string",
            "required": false
          },
          "hdmiInputs": {
            "type": "array",
            "title": "HDMI input",
            "default": [],
            "minItems": 0,
            "maxItems": 6,
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "title": "HDMI port number",
                  "type": "string",
                  "maxLength": 1,
                  "pattern": "^[0-6]$",
                  "required": true
                },
                "name": {
                  "title": "attached source description",
                  "type": "string",
                  "required": true
                }
              }
            }
          },

          "customVolumeSlider": {
            "title": "Volume control service",
            "description": "Whether to enable a fan as an additional TV volume control artifact to HomeKit",
            "type": "boolean",
            "default": "false"
          }
        }
      }
    }
  },
  "form": [
    {
      "type": "tabarray",
      "flex-flow": "row wrap",
      "key": "tvs",
      "items": [
        "tvs[].tvName",
        "tvs[].ipAddress",
        {
          "key": "tvs[]",
          "title": "Authentication",
          "type": "flex",
          "flex-flow": "row",
          "items": [
            {
              "key": "tvs[].encKey",
              "placeholder": "leave empty except for 2018 and later sets"
            },
            {
              "key": "tvs[].appId",
              "placeholder": "leave empty except for 2018 and later sets"
            }
          ]
        },
        {
          "key": "tvs[].hdmiInputs",
          "type": "tabarray",

          "items": [
            {
              "type": "flex",
              "flex-flow": "row",
              "items": ["tvs[].hdmiInputs[].id", "tvs[].hdmiInputs[].name"]
            }
          ]
        },
        "tvs[].customVolumeSlider"
      ]
    }
  ]
}
