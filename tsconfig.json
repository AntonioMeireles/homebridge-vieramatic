{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    // the 'dom' bellow is a bizarre workaround for https://github.com/axios/axios/issues/3219 and allows us to ship an up to dae axios lib
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false, //XXX
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
