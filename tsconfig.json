{
  "compilerOptions": {
    "target": "ESnext",
    "module": "commonjs",
    "lib": [
      "esnext",
    ],
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/",
    ".eslintrc.js",
    "esbuild.config.js"
  ]
}
